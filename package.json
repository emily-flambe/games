{
  "name": "games-platform",
  "version": "1.1.2",
  "description": "Minimal games platform on Cloudflare Workers",
  "scripts": {
    "dev": "wrangler dev --local --persist-to .wrangler/state",
    "dev:remote": "wrangler dev",
    "build": "node scripts/build-static.js",
    "deploy": "npm run build && wrangler deploy",
    "bump-patch": "node scripts/bump-version.js patch",
    "bump-minor": "node scripts/bump-version.js minor",
    "bump-major": "node scripts/bump-version.js major",
    "test": "npm run test:unit && npm run test:browser",
    "test:unit": "jest tests/unit",
    "test:browser": "jest tests/browser --forceExit",
    "test:e2e": "jest tests/e2e --forceExit",
    "test:e2e:ci": "jest tests/e2e --forceExit --detectOpenHandles --maxWorkers=1",
    "test:all": "npm run test:unit && npm run test:browser && npm run test:e2e",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest",
    "test:visual": "jest tests/visual",
    "test:visual:update": "UPDATE_BASELINES=true jest tests/visual",
    "test:visual:cli": "node scripts/visual-test.js run",
    "test:visual:update-cli": "node scripts/visual-test.js update",
    "test:watch": "jest --watch tests/unit",
    "test:coverage": "jest tests/unit --coverage"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.64",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.16.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.28.1"
  }
}
